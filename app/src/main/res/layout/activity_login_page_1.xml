<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"


    tools:context="com.krishbarcode.police_app.Login_page_1">


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email1"

                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Enter email Here"


                android:textColorHint="@color/hint"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:inputType="textPassword"
                android:textColorHint="@color/hint"
                android:hint="Enter Password here"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/buttontxt"
                android:background="@color/buttons"
                android:textSize="20sp"
                android:layout_alignEnd="@+id/pass1"
                android:layout_alignLeft="@+id/email1"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/pass1"
                android:layout_alignStart="@+id/email1"
                android:layout_marginBottom="159dp"
                android:onClick="signin"
                android:text="signup"
                android:layout_weight="1"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
